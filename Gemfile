source "https://rubygems.org"

# 使用 Jekyll 4 
gem "jekyll", "~> 4.3"

# 明确指定 Chirpy 主题版本（当前主流版本）
gem "jekyll-theme-chirpy", "~> 7.0"

# 以下是 Chirpy 运行必须的插件，一个都不能少
group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-archives"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-include-cache"
end
